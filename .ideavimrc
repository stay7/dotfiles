let mapleader="\<Space>"

set NERDTree

set relativenumber
set expandtab

set smartindent
set noswapfile
set nobackup

set nohlsearch
set incsearch

set ignorecase
set smartcase

set clipboard=unnamedplus
set ideajoin

" disable bell
set visualbell
set noerrorbells

nnoremap <leader>e :NERDTreeToggle<CR>
nnoremap <leader>E :NERDTreeFind<CR>
nnoremap <C-i> <C-o>
nnoremap <C-o> <C-i>

xnoremap J :m'>+1<CR>gv=gv
xnoremap K :m'<-2<CR>gv=gv

nnoremap <C-h> <C-w>h
nnoremap <C-k> <C-w>k
nnoremap <C-j> <C-w>j
nnoremap <C-l> <C-w>l

nnoremap ss :split<cr>
nnoremap sv :vsplit<cr>

:set keep-english-in-normal

" harpoon
nmap <leader>H1 :action SetHarpoon1<cr>
nmap <leader>H2 :action SetHarpoon2<cr>
nmap <leader>H3 :action SetHarpoon3<cr>
nmap <leader>H4 :action SetHarpoon4<cr>

nmap <leader>h1 :action GotoHarpoon1<cr>
nmap <leader>h2 :action GotoHarpoon2<cr>
nmap <leader>h3 :action GotoHarpoon3<cr>
nmap <leader>h4 :action GotoHarpoon4<cr>

nmap <leader>hl :action ShowHarpoon<cr>
nmap <leader>ha :action AddToHarpoon<cr>

"which-key https://github.com/TheBlob42/idea-which-key
set which-key
set notimeout
set timeoutlen=5000
let g:WhichKeyDesc_harpoon_set = "<leader>H Harpoon set"
let g:WhichKeyDesc_harpoon_go = "<leader>h Harpoon go"
let g:WhichKey_ShowVimActions = "true"


